<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    Posted <%= time_tag post.created_at,"data-local":"time-ago" %>
,
    last updated <%= time_tag post.updated_at,"data-local":"time-ago" %>
  </p>
  <p>
    <strong><%= pluralize post.comments.count, "comments"  %></strong>
  </p>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

</div>
